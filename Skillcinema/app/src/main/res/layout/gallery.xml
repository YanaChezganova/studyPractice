<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.skillcinema.ui.support.ViewGroupHeaderOnly
        android:id="@+id/layout_with_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />
    <HorizontalScrollView
        android:id="@+id/buttons_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_with_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_blue_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/selector_button_for_job"
                android:text="@string/job_and_count"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_blue_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:background="@drawable/selector_button_for_job"
                android:text="@string/job_and_count"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_blue_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textSize="18sp"
            android:text="@string/job_and_count"
            android:textAllCaps="false"
            android:background="@drawable/selector_button_for_job"
            android:visibility="gone"
            />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_blue_forth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:textSize="18sp"
                android:text="@string/job_and_count"
                android:textAllCaps="false"
                android:background="@drawable/selector_button_for_job"
                android:visibility="gone"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_blue_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:textSize="18sp"
                android:text="@string/job_and_count"
                android:textAllCaps="false"
                android:background="@drawable/selector_button_for_job"
                android:visibility="gone"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photo_vertical_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:orientation="vertical"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="200dp"
        app:layout_constraintTop_toBottomOf="@+id/buttons_scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>