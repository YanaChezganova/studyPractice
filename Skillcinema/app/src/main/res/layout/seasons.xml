<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.skillcinema.ui.support.ViewGroupHeaderOnly
        android:id="@+id/layout_with_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />
<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/text_season"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/RegularTextStyle"
    android:layout_marginStart="26dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="24dp"
    android:text="@string/seasons"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@+id/layout_with_header"
    app:layout_constraintStart_toStartOf="parent"
    />
    <HorizontalScrollView
        android:id="@+id/chips_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="100dp"

        app:layout_constraintStart_toEndOf="@id/text_season"
        app:layout_constraintTop_toBottomOf="@+id/layout_with_header">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Skillcinema"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:paddingEnd="50dp"

            app:singleLine="true"
            app:singleSelection="true">
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_selected_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/GreyRegularText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="26dp"
        android:text="@string/number_season_count_series"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/chips_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/series_horizontal_recycler_view"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="280dp"
        app:layout_constraintTop_toBottomOf="@id/text_selected_season"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintTop_toBottomOf="@id/series_horizontal_recycler_view"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>